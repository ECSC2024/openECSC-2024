{
  "enabled": true,
  "services": {
    "waf": {
      "build": "src/waf",
      "expose": [
        {
          "type": "http",
          "container": 80,
          "hostname": "protolesswaf.challs.open.ecsc2024.it",
          "secure": false
        }
      ],
      "environment": {
        "SERVER_HOST": "{{ .services.server.hostname }}"
      },
      "depends-on": [
        "server"
      ]
    },
    "server": {
      "build": "src/server",
      "environment": {
        "FLAG": "openECSC{trust_the_proto_not_the_user}"
      }
    }
  }
}