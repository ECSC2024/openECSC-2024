{
  "enabled": true,
  "services": {
    "cybertonpost": {
      "build": "src",
      "environment": {
        "MYSQL_ROOT_PASSWORD": "password",
        "MYSQL_DATABASE": "cyberpost",
        "MYSQL_USER": "cyberpost",
        "MYSQL_PASSWORD": "password"
      },
      "volumes": [
        {
          "type": "bind",
          "readonly": true,
          "host": "src/init.sql",
          "container": "/docker-entrypoint-initdb.d/init.sql"
        }
      ],
      "expose": [
        {
          "type": "tcp",
          "container": 3000,
          "host": 38210
        }
      ]
    }
  }
}