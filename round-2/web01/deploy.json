{
  "enabled": true,
  "services": {
    "provider": {
      "build": "src/provider",
      "environment": {
        "BACKEND_DOMAIN": "woauthalaundry.challs.open.ecsc2024.it"
      }
    },
    "frontend": {
      "build": "src/frontend",
      "depends-on": [
        "provider"
      ]
    },
    "nginx": {
      "image": "nginx:1.25",
      "environment": {
        "NGINX_ENVSUBST_OUTPUT_DIR": "/etc/nginx",
        "PROVIDER_HOST": "{{ .services.provider.hostname }}:80",
        "FRONTEND_HOST": "{{ .services.frontend.hostname }}:3000"
      },
      "volumes": [
        {
          "type": "bind",
          "host": "src/reverse-proxy/nginx.conf",
          "container": "/etc/nginx/templates/nginx.conf.template",
          "readonly": true
        }
      ],
      "expose": [
        {
          "type": "http",
          "secure": false,
          "container": 80,
          "hostname": "woauthalaundry.challs.open.ecsc2024.it"
        }
      ],
      "depends-on": [
        "provider",
        "frontend"
      ]
    }
  }
}